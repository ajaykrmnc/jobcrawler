# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_TO=your_email@gmail.com

# RSS Feed Configuration
# Set USE_JSON_FEEDS=true to use rss_feeds.json (recommended for multiple feeds)
# Set USE_JSON_FEEDS=false to use RSS_FEEDS environment variable (simple comma-separated list)
USE_JSON_FEEDS=true

# RSS Feed URLs (comma-separated) - Only used if USE_JSON_FEEDS=false
RSS_FEEDS=https://example.com/feed1.xml,https://example.com/feed2.xml

# User Profile Configuration
# Set USE_JSON_PROFILE=true to use user_profile.json (recommended - more features)
# Set USE_JSON_PROFILE=false to use environment variables below (simple setup)
USE_JSON_PROFILE=true

# Your Profile for Job Matching (Only used if USE_JSON_PROFILE=false)
# For better configuration with more options, use user_profile.json instead
YOUR_SKILLS=Python,JavaScript,React,Node.js,AWS,Docker
YOUR_EXPERIENCE_YEARS=3
YOUR_PREFERRED_LOCATIONS=Remote,San Francisco,New York
YOUR_JOB_TITLES=Software Engineer,Full Stack Developer,Backend Developer

